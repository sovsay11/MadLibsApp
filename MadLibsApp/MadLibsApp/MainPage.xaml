<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MadLibsApp.MainPage">

    <ScrollView>
        <StackLayout BackgroundColor="WhiteSmoke">

            <Frame BackgroundColor="LightGray">
                <Label Text="Noah's Madlib App"
               HorizontalTextAlignment="Center"
               FontSize="Title"
               TextColor="Black"/>
            </Frame>

            <!--Food label and entry-->
            <Frame CornerRadius="30"
                   Margin="10"
                   BorderColor="Black">
                <StackLayout>
                    <Label Text="Food"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   TextColor="Black"/>
                    <Entry x:Name="EntFood"
                   Placeholder="Type word here..."
               HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!--Job label and entry-->
            <Frame CornerRadius="30"
                   Margin="10"
                   BorderColor="Black">
                <StackLayout>
                    <Label Text="Profession/Job"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   TextColor="Black"/>
                    <Entry x:Name="EntJob"
                           Placeholder="Type word here..."
               HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!--Adjective label and entry-->
            <Frame CornerRadius="30"
                   Margin="10"
                   BorderColor="Black">
                <StackLayout>
                    <Label Text="Adjective"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   TextColor="Black"/>
                    <Entry x:Name="EntAdjective"
                           Placeholder="Type word here..."
               HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!--Phrase label and entry-->
            <Frame CornerRadius="30"
                   Margin="10"
                   BorderColor="Black">
                <StackLayout>
                    <Label Text="Phrase/Lyrics/Saying"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   TextColor="Black"/>
                    <Entry x:Name="EntPhrase"
                           Placeholder="Type word here..."
               HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!--Animal label and entry-->
            <Frame CornerRadius="30"
                   Margin="10"
                   BorderColor="Black">
                <StackLayout>
                    <Label Text="Animal"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   TextColor="Black"/>
                    <Entry x:Name="EntAnimal"
                           Placeholder="Type word here..."
               HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!--Verb label and entry-->
            <Frame CornerRadius="30"
                   Margin="10"
                   BorderColor="Black">
                <StackLayout>
                    <Label Text="Verb"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   TextColor="Black"/>
                    <Entry x:Name="EntVerb"
                           Placeholder="Type word here..."
               HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!--Place label and entry-->
            <Frame CornerRadius="30"
                   Margin="10"
                   BorderColor="Black">
                <StackLayout>
                    <Label Text="Place"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   TextColor="Black"/>
                    <Entry x:Name="EntPlace"
                           Placeholder="Type word here..."
               HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!--Celebrity label and entry-->
            <Frame CornerRadius="30"
                   Margin="10"
                   BorderColor="Black">
                <StackLayout>
                    <Label Text="Celebrity"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   TextColor="Black"/>
                    <Entry x:Name="EntCeleb"
                           Placeholder="Type word here..."
               HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!--Something to buy label and entry-->
            <Frame CornerRadius="30"
                   Margin="10"
                   BorderColor="Black">
                <StackLayout>
                    <Label Text="Something you would buy (plural)"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   TextColor="Black"/>
                    <Entry x:Name="EntBuy"
                           Placeholder="Type word here..."
               HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!--Things label and entry-->
            <Frame CornerRadius="30"
                   Margin="10"
                   BorderColor="Black">
                <StackLayout>
                    <Label Text="Things (plural)"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   TextColor="Black"/>
                    <Entry x:Name="EntThings"
                           Placeholder="Type word here..."
               HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>


            <Button x:Name="BtnGenerateMadlib"
                    Text="Generate madlib!"
                    FontSize="Medium"
                    Margin="15"
                    Padding="20"
                    CornerRadius="30"
                    BorderColor="Black"
                    BorderWidth="3"
                    Clicked="BtnGenerateMadlib_Clicked"/>

            <!--Madlib goes here-->
            <Frame BorderColor="Black"
                   Margin="10">
                <Label x:Name="LblMadlib"
                       Text="Nothing here yet!"
                       TextColor="Black"
                       FontSize="Medium"/>
            </Frame>
        </StackLayout>
    </ScrollView>

</ContentPage>
